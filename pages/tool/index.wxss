@import "./index-light.wxss";
@import "./index-dark.wxss";

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 32rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin-top: 32rpx;
  width: 320rpx;
  height: 320rpx;
}

.tool-item_icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-item_icon image {
  width: 88rpx;
  height: 88rpx;
}

text {
  margin-top: 32rpx;
  font-size: 32rpx;
}